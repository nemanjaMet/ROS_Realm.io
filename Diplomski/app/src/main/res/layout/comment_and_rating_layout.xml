<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/start_comment_and_rating"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/username_comment_and_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Username"
        android:layout_below="@+id/start_comment_and_rating"
        android:textAlignment="center"
        />


    <TextView
        android:id="@+id/foodName_comment_and_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_comment_and_rating"
        android:text="Food name "
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/font_margin_standard"
        />

    <TextView
        android:id="@+id/date_comment_and_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName_comment_and_rating"
        android:text="Date and time "
        android:textColor="@color/white"
        android:textSize="@dimen/font_margin_standard"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_comment_and_rating"
        android:text="Rating: "
        android:textColor="@color/white"
        />

    <RatingBar
        android:id="@+id/ratingBar_comment_and_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        android:stepSize="1.0"
        android:layout_marginTop="2dp"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_below="@+id/date_comment_and_rating"
        android:layout_toRightOf="@+id/rating_text"
        android:layout_marginLeft="10dp"
        android:isIndicator="true"
        android:theme="@style/RatingBar"
        />

    <TextView
        android:id="@+id/comment_comment_and_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Comment: "
        android:layout_below="@+id/ratingBar_comment_and_rating"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/btnDelete_comment_and_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textColor="@color/white"
        android:src="@drawable/ic_action_delete"
        android:layout_below="@+id/foodName_comment_and_rating"
        android:layout_alignRight="@+id/foodName_comment_and_rating"
        android:layout_alignEnd="@+id/foodName_comment_and_rating"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/comment_comment_and_rating"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>